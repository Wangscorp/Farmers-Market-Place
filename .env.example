# Environment variables example file
# Copy this file to .env and fill in your values

# Frontend (copy to frontend/.env)
# VITE_API_URL=http://localhost:8080

# Backend (copy to backend/.env)
# DATABASE_URL=postgres://user:password@localhost/farmers_market

# M-Pesa Daraja API Configuration
# Get these credentials from https://developer.safaricom.co.ke/

# Consumer credentials from your Daraja app
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here

# Environment: "sandbox" for testing, "production" for live
MPESA_ENVIRONMENT=sandbox

# Business shortcode (use 174379 for sandbox testing)
MPESA_SHORTCODE=174379

# Passkey (use sandbox passkey below for testing)
MPESA_PASSKEY=bfb279f9aa9bdbcf158e97dd71a467cd2e0c893059b10f78e6b72ada1ed2c919

# Callback URL - must be publicly accessible for M-Pesa to send callbacks
# For local development, use ngrok or similar service to expose your localhost
# Example: https://your-ngrok-url.ngrok.io/mpesa/callback
MPESA_CALLBACK_URL=https://your-domain.com/mpesa/callback

# JWT Secret (change this in production)
JWT_SECRET=your-secret-key

# Email Configuration (optional)
SMTP_USERNAME=Wangs
SMTP_PASSWORD=your-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
